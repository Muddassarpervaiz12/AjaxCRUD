@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<button class="btn btn-md btn-primary mb-2" id="btnAddEmployee">Add Employee</button>
<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>City</th>
            <th>State</th>
            <th>Salary</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table">
        <tr></tr>
    </tbody>
</table>

@* design add employee model *@
<div class="madal fade modal" id="EmployeeMadal">
  <div class="modal-dialog">
      <div class="modal-content">
            <div class="modal-header">
                <h2 class="text-info  modal-title" id="empHeading">Add Employee</h2>
                <button class="close text-danger" data-bs-dismiss="modal"> &times;</button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="empid">
                        <label>Id</label>
                        <input type="text" class="form-control" id="Id" disabled="disabled" />
                    </div> 

                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter Name" class="form-control" id="Name" autocomplete="nope"/>
                    </div>

                     <div class="form-group">
                        <label>City</label>
                        <input type="text" placeholder="Enter City" class="form-control" id="City" autocomplete="nope" />
                    </div>

                     <div class="form-group">
                        <label>State</label>
                        <input type="text" placeholder="Enter State" class="form-control" id="State"/>
                    </div>

                    <div class="form-group">
                        <label>Salary</label>
                        <input type="text" placeholder="Enter Salary" class="form-control" id="Salary"/>
                    </div>
                </form>
            </div>


            <div class="modal-footer">
                <button class="btn btn-primary" onclick="SaveEmployee();" id="SaveEmployee">Save</button>
                @* by default this button is hide because use display:none *@
                <button class="btn btn-warning" onclick="UpdateEmployee();" style="display:none" id="UpdateEmployee">Update</button>
                <button class="btn btn-danger btn-default" data-bs-dismiss="modal"> Cancel </button>
                </div>
      </div>
  </div>
</div>


